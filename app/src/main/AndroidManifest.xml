<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bangkandar.moviecatalogefinished">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bangkandar.moviecatalogefinished.activity.HomeActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bangkandar.moviecatalogefinished.activity.MovieDetailActivity"
            android:label="@string/detail_movies"
            android:parentActivityName="com.bangkandar.moviecatalogefinished.activity.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bangkandar.moviecatalogefinished.activity.HomeActivity" />
        </activity>
        <activity
            android:name="com.bangkandar.moviecatalogefinished.activity.TvShowDetailActivity"
            android:label="@string/tvshow_detail"
            android:parentActivityName="com.bangkandar.moviecatalogefinished.activity.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bangkandar.moviecatalogefinished.activity.HomeActivity" />
        </activity>
    </application>

</manifest>